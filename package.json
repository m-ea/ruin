{
  "name": "ruin",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently --names server,client --prefix-colors blue,green \"pnpm -F @ruin/server dev\" \"pnpm -F @ruin/client dev\"",
    "build": "pnpm -r build",
    "test": "vitest run",
    "db:migrate": "tsx packages/server/src/db/migrate.ts",
    "lint": "eslint packages/*/src/**/*.ts",
    "format": "prettier --write \"**/*.{ts,json,md}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
